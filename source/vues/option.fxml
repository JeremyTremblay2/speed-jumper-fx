<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<GridPane alignment="TOP_CENTER" minHeight="1080" minWidth="1920" stylesheets="styleOption.css" id="background" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jeremyantoine.speedjumper.Jeu.Options">
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints />
    </rowConstraints>

    <Label text="Option" id="titre" GridPane.rowIndex="0"/>


    <GridPane GridPane.rowIndex="1">
        <GridPane.margin>
            <Insets top="100"/>
        </GridPane.margin>

        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints/>
        </columnConstraints>

        <Label text="Musique" styleClass="options" GridPane.columnIndex="0"/>

        <Slider  GridPane.columnIndex="1">
            <GridPane.margin>
                <Insets left="20"/>
            </GridPane.margin>
        </Slider>
    </GridPane>

    <GridPane GridPane.rowIndex="2">
        <GridPane.margin>
            <Insets top="20"/>
        </GridPane.margin>

        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints/>
        </columnConstraints>

        <Label text="Son" styleClass="options" GridPane.columnIndex="0"/>

        <Slider  GridPane.columnIndex="1"/>
    </GridPane>


    <Button GridPane.rowIndex="3" fx:id="boutonHome" onAction="#retourAccueil">
        <graphic>
            <ImageView fitWidth="70" preserveRatio="true" >
                <Image url="images/logo/home.png"/>
            </ImageView>
        </graphic>
    </Button>
</GridPane>
