<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.ListView?>
<StackPane prefHeight="400.0" prefWidth="600.0"
           xmlns="http://javafx.com/javafx/11.0.2"
           xmlns:fx="http://javafx.com/fxml/1"
           stylesheets="style/styleMenuPrincipal.css">
    <children>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="600.0" minWidth="10.0" prefWidth="397.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <TextFlow prefHeight="200.0" prefWidth="200.0" />
                <ListView fx:id="laListeDeScores" />
                <Button GridPane.rowIndex="3" text="Jouer" onAction="#ouvrirJeu"/>
            </children>
            <Button GridPane.rowIndex="3" fx:id="boutonHome" onAction="#retourMenu">
                <graphic>
                    <ImageView fitWidth="70" preserveRatio="true" >
                        <Image url="images/logo/home.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </GridPane>
    </children>
</StackPane>
